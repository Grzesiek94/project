{% extends 'base.twig' %}

{% block title %}{{ 'Log in'|trans }}{% endblock %}

{% block content %}
    <h2>{{ 'Log in'|trans }}</h2>
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="well text-center">
            <form role="form" action="{{ path('auth_login_check') }}" method="post">
                    <div class="form-group">
                        {{ form_row(form.login) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.password) }}
                    </div>
                    <input type="submit" class="btn btn-default" name="submit" value="{{ 'Login'|trans }}" />
            </form>
        </div>
        {{ error }}
    </div>
{% endblock %}
