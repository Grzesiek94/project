{# Index action template for Questions controller #}
{% extends 'base.twig' %}

{% block title %}{{ 'Ignored questions'|trans }}{% endblock %}

{% block head %}
     {{ parent() }} 
    <style type="text/css">
        img { width: 50px; height: 50px; }
        a { float: right; }
    </style>
{% endblock %}

{% block content %}

{% for flashMessage in app.session.getFlashBag.get('message') %}
    <br>
    <div class="alert alert-{{ flashMessage.type }}" role="alert">
        {{ flashMessage.content }}
    </div>
{% endfor %}

    <h1>
        {{ 'Ignored questions'|trans }}
    </h1>
    {%  if ignored|length > 0 %}
        <table class="table table-hover">
            <thead>
            <tr>
                <th><center>From:</th>
                <th></th>
                <th><center>To:</th>
            </tr>
            </thead>
            <tbody>
            {% for data in ignored %} 
                <tr>
                    <td><center>
                        <img class="img-thumbnail" src="{{ app.request.basepath }}/upload/{{ data.question_avatar|e }}" /><br>
                        {{ data.question_login }}
                    </td>
                    <td><center>
                        <h4><span class="glyphicon glyphicon-arrow-right"></h4>
                    </td>
                    <td><center>
                        <img class="img-thumbnail" src="{{ app.request.basepath }}/upload/{{ data.answer_avatar|e }}" /><br>
                        {{ data.answer_login }}
                    </td>
                    <td><center>
                        {{ data.question }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
	<a href="{{ url('ignored_delete') }}" class="btn btn-danger" >{{ 'Delete ALL'|trans }}</a>
        <br><br>
    {% else %}
        <div class="alert alert-danger" role="alert">
            {{ 'Theres no ignored questions'|trans }}.
        </div>
    {% endif %}
{% endblock %}

