{# Edit action template for Users controller #}
{% extends 'base.twig' %}

{% block title %}{{  'Reset password'|trans }}{% endblock %}

{% block content %}
    <h1>
        {{ 'Reset password'|trans }}
    </h1>
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <div class="well">
            <center>
            <form role="form" action="{{ url('reset_password') }}" method="post">
                {{ form_start(form)  }}
                    <div class="form-group">
                        {{ form_row(form.old) }}
                    </div><br>
                    <div class="form-group">
                        {{ form_row(form.new) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.confirm) }}
                    </div>
                    <input type="submit" class="btn btn-default" name="submit" value="{{ 'Reset'|trans }}" />
                {{ form_end(form) }}
            </form>
        </div>
    </div>
{% endblock %}
